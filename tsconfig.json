{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./",
    "rootDir": "./api",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["api/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/generated/prisma",
    "dist"
  ]
}